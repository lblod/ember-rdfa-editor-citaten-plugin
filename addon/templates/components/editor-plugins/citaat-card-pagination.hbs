<ul class="pager__list">
  <li class="pager__element">
    <span class="u-visually-hidden">Rij</span>
    <strong>{{rangeStart}} - {{rangeEnd}}</strong> van {{total}} resultaten
  </li>
  {{#unless isFirstPage}}
    <li class="pager__element">
      <a {{action "prev"}}>
        {{wu-icon "vi-arrow" class="vi-u-180deg vi-u-s"}} vorige
        <span class="u-visually-hidden"> {{pageSize}} rijen</span>
      </a>
    </li>
  {{/unless}}
  {{#unless isLastPage}}
    <li class="pager__element">
      <a {{action "next"}}>
        volgende
        <span class="u-visually-hidden"> {{pageSize}} rijen</span>
        {{wu-icon "vi-arrow" class="vi-u-s"}}
      </a>
    </li>
  {{/unless}}
</ul>
