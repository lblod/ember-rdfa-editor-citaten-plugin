<AuList::Item>
  <AuButton
    @icon="add"
    @iconAlignment="left"
    @skin="link"
    @disabled={{this.disableInsert}}
    {{on 'click' this.openModal}}>
    {{t "insert.title"}}
  </AuButton>
</AuList::Item>

{{#if this.showModal}}
  <EditorPlugins::Citations::Modal
    @closeModal={{this.closeModal}}
    @insertCitation={{this.insertCitation}}
    @legislationTypeUri={{this.legislationTypeUri}}
    @text={{this.text}}
  />
{{/if}}
